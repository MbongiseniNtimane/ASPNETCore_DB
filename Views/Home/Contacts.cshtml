<body>
    <header>
        <h1>Contact</h1>
    </header>
    <section class="contact-us section" >
        <div class="container">
                       <h3>Visit Our campuses, or leave us a message:</h3>
            <div class="row">
                <div class="column">
                     <iframe src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d3524.322263646551!2d26.782598574490496!3d-27.953415137487347!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x1e910d48aae2abb3%3A0xc204a63bd47f59c!2s1%20Mothusi%20Rd%2C%20Thabong%2C%20Welkom%2C%209459!5e0!3m2!1sen!2sza!4v1711827938851!5m2!1sen!2sza" width="480" height="650" style="border:0;" allowfullscreen="" loading="lazy" referrerpolicy="no-referrer-when-downgrade"></iframe>
                </div>
                <!----Form to fill your details-->
                <div class="column">
                    <form id="contactForm">
                        <label for="first-name">First Name</label>
                        <input type="text" id="first-name" name="firstname" placeholder="Your name.." required>
                        <label for="last-name">Last Name</label>
                        <input type="text" id="last-name" name="lastname" placeholder="Your last name.." required>
                        <label for="student-number">Student Number or ID</label>
                        <input type="number" id="student-number" name="student number" placeholder="Student Number or ID" required>
                        <span id="errorMessage" class="error"></span>
                        <label for="campus">Campus</label>
                        <select id="campus" name="Campus">
                            <option value="welkom">Welkom</option>
                            <option value="bloemfontein">Bloemfontein</option>  
                        </select>
                        <label for="subject">Subject</label>
                        <textarea id="subject" name="subject" placeholder="Write something.."
                                  style="height:170px"></textarea>
                        <span id="successMessage" class="success-message" style="display: none;">Message sent successfully!</span>
                        <span id="errorMessage" class="error-message" style="display: none;">
                            Failed to send message. Please try again
                            later.
                        </span><br><br>
                        <input class="bttn" type="submit"  value="Submit">
                    </form>

                    <div class="message" id="successMessage">
                         <p>Thank you for your message! We'll get back to you as soon as we can.</p>
                     </div>

                </div>
            </div>
            <!--contact-info -->
            <div class="contact-info">
                <div class="row">
                    <!-- single-info -->
                    <div class="col-lg-4 col-12 ">

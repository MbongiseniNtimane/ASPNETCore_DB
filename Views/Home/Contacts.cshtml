                    <div class="col-lg-4 col-12 ">
                        <div class="single-info">
                            <i class="fa-solid fa-location-dot"></i>
                            <div class="content">
                                <h3>1153 Tshepiso</h3>
                                <p>Tshepiso, Sharpeville</p>
                            </div>
                        </div>
                    </div>
                    <!--/End single-info -->
                    <!-- single-info -->
                    <div class="col-lg-4 col-12 ">

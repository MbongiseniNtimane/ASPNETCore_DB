@using Microsoft.AspNetCore.Identity
@using ASPNETCore_DB.Models
@inject SignInManager<IdentityUser> SignInManager
@inject UserManager<IdentityUser> UserManager

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - Brainiacs</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="~/css/site.css" rel="stylesheet" asp-append-version="true" />
    <link rel="stylesheet" href="~/fontawesome/css/all.min.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ASPNETCore_DB.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.1/css/all.min.css">
    <!-- icofont CSS -->
    <link rel="stylesheet" href="css/icofont.css">
    

    <!-- Add Font Awesome CSS link -->
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta3/css/all.min.css" integrity="sha384-nY0J8T4evHq6K7WhLdYfMCtj3FR2emtHaUj90Lm53OIpFd+h6K3O/f3QADWxnAqH" crossorigin="anonymous">
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx" crossorigin="anonymous">
</head>
<body>
    <header>
        <div class="container">
            <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
                <div class="container-fluid">
                    <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index"> <img src="/images/logo.jpg" alt="Image"></a>
                    <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent" aria-expanded="false" aria-label="Toggle navigation">
                        <span class="navbar-toggler-icon"></span>
                    </button>
                    <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                        <ul class="navbar-nav flex-grow-1">
                            <!-- Your existing menu items -->
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Courses</a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="SeedDatabase">Database</a>
                            </li>

                        </ul>
                        <partial name="_LoginPartial" />
                        <!-- User-specific menu items -->
                        <ul class="navbar-nav">
                            @if (SignInManager.IsSignedIn(User))
                            {
                                <li class="nav-item dropdown">
                                    <a class="nav-link dropdown-toggle text-dark" href="#" id="navbarDropdown" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                        <i class="fas fa-user"></i> <!-- Font Awesome icon -->
                                        Profile
                                    </a>
                                    <ul class="dropdown-menu" aria-labelledby="navbarDropdown">
                                        @if (User.IsInRole("User"))
                                        {
                                            <li>
                                                <a class="dropdown-item" href="/Student/Create">Enroll</a>
                                            </li>
                                            <li>
                                                <a class="dropdown-item" href="/Student/Details">Your Detail</a>
                                            </li>
                                        }
                                        @if (User.IsInRole("Admin"))
                                        {
                                            <li>
                                                <a class="dropdown-item" href="/Student/Index">Student</a>
                                            </li>
                                        }
                                          
                                        <li>
                                            <!---- Log out button ---->
                                            <a class="dropdown-item" asp-area="" asp-controller="Account" asp-action="Logout">
                                                <form id="logoutForm" class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                      
                                                    <button id="logout" type="submit" class="nav-link btn btn-link text-dark">Logout</button>
                                                </form>
                                            </a>
                                        </li>
                                        
                                    </ul>
                                </li>
                            }
                            <!-- Login partial -->
                            
                        </ul>
                    </div>
                </div>
            </nav>
        </div>
    </header>

   
        <div class="main">
            <main role="main" class="pb-3">
                @RenderBody()
                

          
                
            </main>
        </div>
    
    
    <section>
        <footer>
            <div class="container">
                <div class="middle-footer">
                    <ul class="footer-menu">
                        <li class="footer-menu-list">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Index">Home</a>
                        </li>
                        <li class="footer-menu-list">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Contacts">Contacts</a>
                        </li>
                        <li class="footer-menu-list">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="About">About</a>
                        </li>
                        <li class="footer-menu-list">
                            <a class="nav-link text-dark" asp-area="" asp-controller="Home" asp-action="Privacy">Courses</a>
                        </li>
                    </ul>
                </div>

                 <div class="footer-social-icons">
                    <div class="icon"><a href="https://www.x.com/"><i class="fa-brands fa-twitter icon"></i></a></div>
                    <div class="icon"><a href="https://www.facebook.com/"><i class="fa-brands fa-facebook icon"></i></a></div>
                    <div class="icon"><a href="https://www.linkedin.com/"><i class="fa-brands fa-linkedin icon"></i></a></div>
                    <div class="icon"><a href="https://www.whatsapp.com/"><i class="fa-brands fa-whatsapp icon"></i></a></div>
                    <div class="icon"><a href="mailto:recipient@example.com"> <i class="fa-solid fa-envelope icon"></i></a></div>
                </div>
                <div class="bottom-footer">
                    <p>
                        Copyright &copy; <a href="#home" style="text-decoration: none;">Brainiacs</a> - All rights reserved
                        2024
                    </p>
                </div>
            </div>
        </footer>
    </section>
   

    <!-- Bootstrap Bundle with Popper -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/js/bootstrap.bundle.min.js" integrity="sha384-A3rJD856KowSb7dwlZdYEkO39Gagi7vIsF0jrRAoQmDKKtQBHUuLZ9AsSv4jD4Xa" crossorigin="anonymous"></script>
    <!-- jQuery -->
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <!-- Your custom scripts -->
    <script src="~/js/site.js" asp-append-version="true"></script>
    <!-- Section scripts -->
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
